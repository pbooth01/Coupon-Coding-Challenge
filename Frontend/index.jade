doctype html
html(lang="en")
    head
        title="Coupon Challenge Problem"
    body
        div(class="intro-form-wrapper")
            h1(id="title") Enter Your Shop Credentials!

            | Email:
            input(type="text", id="Email")
            | Password:
            input(type="text", id="Password")
            | Shopname:
            input(type="text", id="Shopname")

            button(class="btn", onclick="verifyAccount()").
                Verify Info

        div(class="coupon-form-wrapper")
            div(class="coupon-form-header")
                h1 Enter Coupon Specifications!
            form(name="radio-holder")
                | Percentage
                input(type="radio", name="coupon_type_filter", value="percentage")
                | Fixed Amount
                input(type="radio", name="coupon_type_filter", value="fixed_amount")

            | Value
            input(type="number", id="Value" min="0")
            | Maximum Order
            input(type="number", id="Max_order" min="0" value="0")

            button(class="btn", onclick="createCoupon()").
                Create Coupon

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js", type='text/javascript')
        script(type='text/javascript', src='/js/logic.js')